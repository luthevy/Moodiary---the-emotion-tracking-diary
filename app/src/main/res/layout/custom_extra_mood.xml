<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/chooseMoodBgExtra"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/circular_shape50"
            android:visibility="visible"
            android:scaleType="centerInside"
            />
        <ImageView
            android:id="@+id/chooseMoodExtra"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mood_amazing"
            android:tint="@color/GreenYellow"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/textMoodExtra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Amazing"
        android:textColor="@color/GreenYellow"
        android:textStyle="bold" />
</LinearLayout>