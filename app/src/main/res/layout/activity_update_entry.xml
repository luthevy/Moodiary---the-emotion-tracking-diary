<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/imgbtnExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:src="@drawable/ic_x_icon"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgbtnExit">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chooseDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="-10dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_baseline_calendar"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down"
                        android:text="Choose Day"
                        android:textColor="@color/Green" />

                    <TextView
                        android:id="@+id/chooseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="80dp"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_baseline_clock"
                        android:drawableRight="@drawable/ic_baseline_arrow_drop_down"
                        android:text="Choose Time"
                        android:textColor="@color/Green" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/amazingRL"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/chooseAmazingBg"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/circular_shape50"
                                android:visibility="visible"
                                android:scaleType="centerInside"
                                />
                            <ImageView
                                android:id="@+id/chooseAmazing"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/mood_amazing"
                                android:tint="@color/GreenYellow"
                                android:layout_centerInParent="true"
                                />


                        </RelativeLayout>
                        <TextView
                            android:id="@+id/textAmazing"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Amazing"
                            android:textColor="@color/GreenYellow"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/happyRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/chooseHappyBg"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/circular_shape50"
                                android:visibility="visible"
                                android:scaleType="centerInside"
                                />

                            <ImageView
                                android:id="@+id/chooseHappy"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/mood_happy"
                                android:tint="@color/Green" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/textHappy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Happy"
                            android:textColor="@color/Green"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/okRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/chooseOkBg"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/circular_shape50"
                                android:visibility="visible"
                                android:scaleType="centerInside"
                                />
                            <ImageView
                                android:id="@+id/chooseOk"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/mood_ok"
                                android:tint="@color/Aqua" />

                        </RelativeLayout>
                        <TextView
                            android:id="@+id/textOk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Ok"
                            android:textColor="@color/Aqua"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/sadRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/chooseSadBg"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/circular_shape50"
                                android:visibility="visible"
                                android:scaleType="centerInside"
                                />
                            <ImageView
                                android:id="@+id/chooseSad"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/mood_sad"
                                android:tint="@color/Orange" />

                        </RelativeLayout>
                        <TextView
                            android:id="@+id/textSad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sad"
                            android:textColor="@color/Orange"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/awfulRL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/chooseAwfulBg"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/circular_shape50"
                                android:visibility="visible"
                                android:scaleType="centerInside"
                                />
                            <ImageView
                                android:id="@+id/chooseAwful"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/mood_awful"
                                android:tint="@color/Red" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textAwful"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Awful"
                            android:textColor="@color/Red"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <TableLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <TableRow android:layout_marginTop="25dp">
                    <LinearLayout
                        android:id="@+id/activity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_drawing"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="drawing"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_tv"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="tv"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>

                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/activity_eat"
                                app:tint="@color/LimeGreen" />
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="eat"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_sleep"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="sleep"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_walk"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="walk"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_marginTop="25dp">
                    <LinearLayout
                        android:id="@+id/activity6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_date"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="date"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_swim"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="swim"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_friend"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="friend"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="33dp"
                                android:layout_height="33dp"
                                android:src="@drawable/activity_work"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="work"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/edit_new"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/circular_shape_none"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/edit_new"
                                app:tint="@color/LimeGreen"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="edit/new"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/LimeGreen"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/ic_baseline_event_note"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/Green"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/edtxt_Notes"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#F2F2F7"
                    android:layout_marginTop="5dp"
                    android:inputType="text|textMultiLine"
                    android:gravity="top"
                    android:hint="  Add note..."/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/camera"
                        app:tint="@color/Green" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo"
                        android:textStyle="bold"
                        android:layout_marginStart="3dp"
                        android:textColor="@color/Green"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnAddPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Tap to Add Photo..."
                        android:backgroundTint="@color/LimeGreen"/>
                    <ImageView
                        android:id="@+id/selectedImage"
                        android:layout_width="110dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="vertical"
                    android:layout_marginLeft="150dp">
                    <ImageButton
                        android:id="@+id/btnSave"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/tick"
                        app:tint="@color/Green"
                        android:background="@drawable/circular_shape" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:textStyle="bold"
                        android:textColor="@color/LimeGreen"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>